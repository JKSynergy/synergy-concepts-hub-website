# Database
DATABASE_URL="postgresql://username:password@localhost:5432/quickcredit_db?schema=public"

# Server
NODE_ENV=development
PORT=5000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URLs
FRONTEND_URL=http://localhost:3000
CLIENT_PORTAL_URL=http://localhost:3001

# Email Configuration (using Gmail as example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=QuickCredit Uganda <noreply@quickcredit.ug>

# SMS Configuration (using Africas Talking)
AFRICASTALKING_USERNAME=your-username
AFRICASTALKING_API_KEY=your-api-key
SMS_SENDER_ID=QuickCredit

# WhatsApp API Configuration (using Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Mobile Money Configuration (MTN & Airtel Uganda)
# MTN MoMo API
MTN_MOMO_USER_ID=your-mtn-user-id
MTN_MOMO_API_KEY=your-mtn-api-key
MTN_MOMO_SUBSCRIPTION_KEY=your-mtn-subscription-key
MTN_MOMO_ENVIRONMENT=sandbox
MTN_MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com

# Airtel Money API
AIRTEL_CLIENT_ID=your-airtel-client-id
AIRTEL_CLIENT_SECRET=your-airtel-client-secret
AIRTEL_ENVIRONMENT=sandbox
AIRTEL_BASE_URL=https://openapiuat.airtel.africa

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_MOBILE_MONEY=true
ENABLE_WHATSAPP=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_AUDIT_LOGGING=true

# Loan Configuration
DEFAULT_INTEREST_RATE=0.15
DEFAULT_LOAN_TERM=12
MAX_LOAN_AMOUNT=10000000
MIN_LOAN_AMOUNT=50000
PENALTY_RATE=0.05

# Payment Configuration
PAYMENT_GRACE_PERIOD_DAYS=7
AUTO_PENALTY_CALCULATION=true
ALLOW_PARTIAL_PAYMENTS=true

# Company Information
COMPANY_NAME=QuickCredit Uganda
COMPANY_ADDRESS=Kampala, Uganda
COMPANY_PHONE=+256-XXX-XXXXXX
COMPANY_EMAIL=info@quickcredit.ug
COMPANY_WEBSITE=https://quickcredit.ug